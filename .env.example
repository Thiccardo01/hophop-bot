# Server
PORT=3000
NODE_ENV=development
WEBHOOK_SECRET=your_manychat_webhook_secret_here

# Database (Use this format for local Docker or cloud-hosted Postgres)
DATABASE_URL="postgresql://hophop:hophop_password@localhost:5432/hophop_db?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# OpenAI (Required - get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your-openai-key-here
MODEL=gpt-4o

# Sentry (Optional - for error tracking)
SENTRY_DSN=

# Render Deployment
RENDER_SERVICE_NAME=hophop-bot
